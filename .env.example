# ========== Logging ==========
LOG_LEVEL=INFO
LOG_FILE=logs/detector.log

# ========== Alerting ==========
ALERT_EMAIL=security@example.com

# ========== Sandbox ==========
SANDBOX_DIR=C:\full\path\to\sandbox

# ========== Detection ==========
ENTROPY_THRESHOLD=7.5
FILE_CHANGE_RATE=100

# ========== Isolation ==========
ISOLATION_ACTIONS=suspend_process,disable_network

